<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="273.0" prefWidth="285.0" spacing="20.0" style="-fx-background-color: #ea3473;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.bmicalculator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" prefHeight="40.0" prefWidth="104.0" text="BMI calculator" textFill="#f8bcd0" />
   <Label fx:id="result" onDragDetected="#onButtonClick" />
   <TextField fx:id="weight" style="-fx-background-color: #f8bcd0;" />
   <TextField fx:id="height" style="-fx-background-color: #f8bcd0;" />
    <Button onAction="#onButtonClick" style="-fx-background-color: #6ac5fe;" text="Calculate" />
</VBox>
